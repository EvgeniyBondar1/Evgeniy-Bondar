@model List<Book>

<h2>Books</h2>
<table class="table">
    <tr>
        <td>Id</td>
        <td>Name</td>
        <td>Author</td>
        <td>Year</td>
        <td>Edition</td>
    </tr>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.Id</td>
            <td>@p.Name</td>
            <td>@p.Author</td>
            <td>@p.Year</td>
            <td>@p.Edition</td>
        </tr>
        <td>
            <a asp-action="Edit" asp-controller="Home" asp-route-id="@p.Id">Изменить</a> |
            <a asp-action="Delete" asp-controller="Home" asp-route-id="@p.Id">Удалить</a>
        </td>
    }
</table>

<a asp-action="Create" asp-controller="Home">Добавить новую книгу</a>